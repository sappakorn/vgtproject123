<!DOCTYPE html>
<html lang="en">

<head>
  <title>เข้าสู่ระบบ</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  <style>
    *{
    font-family: "Kanit", sans-serif;
    font-weight: 500;
    font-style: normal;
    }
  </style>

</head>
<body>

  


  <% if (typeof messageerror !== 'undefined') { %>
     <!-- Modal -->
    <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 30px;">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><img src="/img/error.png" style="height: 50px; width: 50px;"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body" style="font-size: 30px;">
            <%= messageerror %>
          </div>
          <div class="modal-footer">
            <a href="../../" type="button" class="btn btn-primary" >ปิด</a>
          </div>
        </div>
      </div>
    </div>

    <% } %> 
    
  


  <form action="./api/auth/login" method="post">
    <div class=" d-flex align-items-center">
      <div class="container pt-3">
        <div class="text-center ">
          <img src="/img/logobig.png" style="max-width: 15rem; height:auto;">
        </div>
        <div class="row">
          <div class="col-sm-7 mx-auto">
            <div class="shadow-lg " style="border-radius: 5%;">
              <div class="d-flex align-items-center">
                <div class="p-4" id="formPanel">
                  <div class="text-center mb-5">
                    <h1 class="customHeading h3 text-uppercase">เข้าสู่ระบบ</h1>
                  </div>
                  <div class="custom-form-group">
                    <label class="text-uppercase" for="username">เบอร์โทร</label>
                    <input type="text" name="phoneNumber" class="pb-1" /><span class="pb-1"><i
                        class="fas fa-user"></i></span>
                  </div>
                  <div class="custom-form-group mt-3">
                    <label class="text-uppercase" for="password">รหัสผ่าน</label>
                    <input type="password" name="password" class="pb-1">
                  </div>
                  <div class="mt-5">
                    <button type="submit" class="w-100 p-2 d-block custom-btn">เข้าสู่ระบบ</button>
                  </div>
                  <div class=" text-center mt-3"><a href="register"
                      style="text-decoration:none ;color:#3E3E3E ;">สมัครสมาชิก</a></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  
  <% if (typeof messageerror !== 'undefined') { %>
    <script>
      // Check if there is a message error and show the modal
      var myModal = new bootstrap.Modal(document.getElementById('exampleModal'));
      myModal.show();
    </script>
  <% } %>

    
  
</body>

</html>

<style>
  .customHeading {
    font-size: 30px;
    color: #FF9110;
  }

  .custom-form-group label {
    color: #FF9110;
    font-size: 20px;
    font-weight: bold;
    letter-spacing: 2px;
  }

  .custom-form-group span {
    width: 32px;
    border-bottom: 1px solid #FF9110;
    vertical-align: middle;
    color: #FF9110;
    display: inline;
  }

  .custom-form-group input {
    width: calc(100% - 32px);
    border: none;
    border-bottom: 1px solid #FF9110;
    box-sizing: content-box;
    outline: none;
  }

  .custom-btn {
    border-radius: 35px;
    background: #FF9110;
    border: 2px solid transparent;
    color: #fff;
    height: 48px;
    font-size: 20px;
  }

  .custom-btn:hover {
    background: #fff;
    border: none;
    border: 2px solid #FF9110;
    color: #FF9110;
  }

  #formPanel {
    min-width: 280px;
    max-width: 320px;
    width: 100%;
    margin: 0 auto;
  }
  .modal-header, .modal-footer {
      border: none; /* Remove the borders */
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .modal-title img {
      display: block;
    }

    .modal-body {
      text-align: center;
    }
</style>
