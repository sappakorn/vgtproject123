<!DOCTYPE html>
<html lang="en">

<head>
  <title>เข้าสู่ระบบ</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  <style>
    *{
    font-family: "Kanit", sans-serif;
    font-weight: 500;
    font-style: normal;
    }
    body{
      background-color:  rgb(255, 255, 255);
    }
    #blog{
      background-color: #fffff9;
    }

    .custombtn{
      border-radius:35px;
        background : #FF9110;
        border:2px solid transparent;
        color:#fff;
        height:48px;
        font-size: 20px;
      
    }
   

    #formPanel {
      min-width: 280px;
      max-width: 320px;
      width: 100%;
      margin: 0 auto;
    }
    .modal-header, .modal-footer {
        border: none; /* Remove the borders */
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .modal-title img {
        display: block;
      }

      .modal-body {
        text-align: center;
      }
    </style>

</head>
<body >

  


  <% if (typeof messageerror !== 'undefined') { %>
     <!-- Modal -->
    <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content " style="border-radius: 30px;">
          <div class="modal-header ">
            <h5 class="modal-title " id="exampleModalLabel">
              <img src="/img/check.png" style="height: 50px; width: 50px;">
            </h5>
          </div>
          <div class="modal-body" style="font-size: 30px;">
            <%= messageerror %>
          </div>
          <div class="modal-footer">
            <a href="../../customer_login" type="button" class="btn btn-primary" >ปิด</a>
          </div>
        </div>
      </div>
    </div>

    <% } %> 
    
  <div class="text-center mt-5 mb-5"><a href="/" >
           <img src="/img/new-logo.png" style="max-width: 20rem; height:auto;">
        </a>
    </div>
  <form action="./api/auth/ctm_login" method="post" >
    
    <div class=" d-flex align-items-center " >
      <div class="container pt-3 ">
        
        <div class="row" >
          <div class="col-sm-7 mx-auto" >
            <div class="shadow-lg " style="border-radius: 30px;" id="blog">
              <div class="d-flex align-items-center">
                <div class="p-4" id="formPanel">
                  <div class="text-center mb-5">
                    <h1 class="customHeading h3 text-uppercase" style="color:#fd3838; font-size: 20px;">เข้าสู่ระบบลูกค้า</h1>
                  </div>
                  <div class="custom-form-group">
                    <label class="text-uppercase" for="username">เบอร์โทร</label>
                    <input type="text" name="phoneNumber" class="pb-1 form-control" />
                  </div>
                  
                  <div class="custom-form-group mt-3">
                    <label class="text-uppercase" for="password">รหัสผ่าน</label>
                    <input type="password" name="password" class="pb-1 form-control">
                  </div>
                  <div class="mt-5">
                    <button type="submit" class="custombtn form-control">เข้าสู่ระบบ</button>
                  </div>
                  <div class=" text-center mt-3"><a href="customer_register"
                      style="text-decoration:none ;color:#3E3E3E ;">สมัครสมาชิก</a></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
 <br><br><br><br><br><br><br><br><br><br><br><br><br>
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  
  <% if (typeof messageerror !=='undefined' ) { %>
    <input type="hidden" id="message_alert" value="<%=messageerror %>">
    <script>

      $(document).ready(function () {
        var messageerror = $('#message_alert').val()
        const Toast = Swal.mixin({
          toast: true,
          position: "top-end",
          showConfirmButton: false,
          timer: 2000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
          }
        });
        Toast.fire({
          icon: "error",
          title: messageerror
        }).then(function () {
          window.location.href = '/index1';
        });
      });

    </script>
    <% } %>
    <% if (typeof message_success !=='undefined' ) { %>
      <input type="hidden" id="message_alert" value="<%=message_success %>">
      <script>
  
        $(document).ready(function () {
          var messageerror = $('#message_alert').val()
          const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.onmouseenter = Swal.stopTimer;
              toast.onmouseleave = Swal.resumeTimer;
            }
          });
          Toast.fire({
            icon: "success",
            title: messageerror
          }).then(function () {
            window.location.href = '/index1';
          });
        });
  
      </script>
      <% } %>

    
  
</body>

</html>


