<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ชื่อร้าน</title>


  <!-- boostrap css -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  
  <!--  -->
  <style>
    *{
    font-family: "Kanit", sans-serif;
    font-weight: 500;
    font-style: normal;
    }
    a{
      font-size: 15px !important;
    }
    button{
      font-size: 15px !important;
    }
    .modal-header, .modal-footer {
      border: none !important; /* Remove the borders */
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }

    .modal-title img {
      display: block !important;
    }

    .modal-body {
      text-align: center !important;
    }
  </style>


</head>

<body>
  <div class="navbar navbar-dark bg-dark px-2"
    style="box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.120); background-color: #ffffff;">
    <nav class="navbar  bg-dark navbar-expand-lg   d-flex justify-content-between align-items-center">
      <a class="navbar-brand d-flex"  href="/customer_home">
        <img style="width:54; height:40px;" src="/img/logo-sm.png" alt="">
        <p style="color:#ff7300;font-size: 15px;padding-top: 15px;">VGTPROJECT</p>
      </a>
      
    </nav>
  </div>

<div>
    

    <form method="post"  action="/customer_checkout" class="px-2 mt-3">
        <div class="d-flex justify-content-center" style="width: 100%;">
            <div class="card rounded-2 p-1 " style="width: 20rem;">
            <% productlist.forEach(product => { %>
                    <div class="card text-center px-1" style="width: 19rem;">
                        <img src="<%= product.product_img %>" class="card-img-top" alt="..." style="height: 100px !important; object-fit: contain;">
                        <div class="">

                        <h1><%= product.productName %></h1>
                        <h5 >ราคา <%= product.productPrice %></h5>
                        <p class="card-text">จำนวน <%= product.quantity %> / <%= product.productType %></p>
                        </div>
                    </div>

                    <input type="hidden" name="productlist" value="<%= productlist %>">
                    <input type="hidden" name="count_product" value="<%= count_product %>">
            
            <% }) %>
            </div>
        </div>
    
    

  

    <div class="d-flex justify-content-center mt-5">
        <div style="width: 250px;height: 250px;border: 1px solid #080808;">
            <img src="https://cdn.britannica.com/17/155017-050-9AC96FC8/Example-QR-code.jpg" alt="" style="width: 100%;height: auto;">
        </div>
    </div>
    
 
    
   
    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary ">
            อัพโหลดสลิป
        </button>
    </div>
  

</form>

</div>


<!-- boostrap js -->
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<!--  -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


  <% if (typeof message_success !== 'undefined' ) { %>
    <input type="hidden" id="message_alert" value="<%=message_success %>">
    <script>

      $(document).ready(function () {
        var messageerror = $('#message_alert').val()
        const Toast = Swal.mixin({
          toast: true,
          position: "top-end",
          showConfirmButton: false,
          timer: 1000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
          }
        });
        Toast.fire({
          icon: "success",
          title: messageerror
        })
        
      });

    </script>
    <% } %>
</body>
</html>