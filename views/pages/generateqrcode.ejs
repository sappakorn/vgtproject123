<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> QR code </title>

    <!-- boostrap css -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  
  <!--  -->
  <style>
    *{
    margin: 0;
    padding: 0;
    font-family: "Kanit", sans-serif;
    font-weight: 500;
    font-style: normal;
    }
    a{
      font-size: 15px !important;
    }
    button{
      font-size: 15px !important;
    }
    .modal-header, .modal-footer {
      border: none !important; /* Remove the borders */
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }

    .modal-title img {
      display: block !important;
    }

    .modal-body {
      text-align: center !important;
    }
  </style>

  
</head>
<body>

    <div class="navbar navbar-dark bg-dark px-2"
    style="box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.120); background-color: #ffffff;">
    <nav class="navbar  bg-dark navbar-expand-lg   d-flex justify-content-between align-items-center">
      <a class="navbar-brand d-flex"  href="/customer_home">
        <img style="width:54; height:40px;" src="/img/logo-sm.png" alt="">
        <p style="color:#ff7300;font-size: 15px;padding-top: 15px;">VGTPROJECT</p>
      </a>
      
    </nav>
  </div>
    
    <div>
        <input type="text" id="amount" placeholder="price"> 
        <button onclick="genQR(event)">generate</button>
    </div>

<div class="d-flex justify-content-center">
  <div class="text-center" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;width: 18rem;" >
    <dir class="d-flex justify-content-center">
      <div class="d-flex align-items-center justify-content-center border border-secondary-subtle border-buttom-0 "  style="width: 18rem;" >
            <img  src="/img/ppth.png" style="width: 100%;height: auto;" >     
      </div>
    </dir>
    <dir class="d-flex justify-content-center">
      <div class="d-flex align-items-center justify-content-center border border-secondary-subtle border-top-0 "  style="width: 18rem;" >
          <img id="imgQr" class=""  style="width: 18rem;height: auto;object-fit: contain;"" >     
      </div>
    </dir>
  </div>
</div>

    


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function genQR(event) {
            event.preventDefault();
            $.ajax({
                url: '/generateqrcode',
                method: 'post',
                contentType: "application/json",
                data: JSON.stringify({
                    amount: parseFloat($('#amount').val())
                }),
                success: function(response) {
                    console.log("res ajax", response);
                    $('#imgQr').attr('src', response.Result); // เปลี่ยนจาก Reult เป็น Result
                },
                error: function(err) {
                    console.log('err ajax', err);
                },
            });
        }
    </script>

    
</body>
</html>