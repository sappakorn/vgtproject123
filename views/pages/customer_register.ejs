                    <p class="card-title text-center mb-4" style="color:#fd3838; font-size: 20px;">ระบบสำหรับลูกค้า</p>
                    <form action="/api/auth/ctm_register" method="post">

                      <div class="form-group d-flex ">        
                              <div class="input-group mb-3 ">
                              <span class="input-group-text" id="basic-addon1"> <img src="/img/cell-phone.png" style="max-width: 30px; height:auto;" alt=""></span>
                              <input type="text" class="form-control" name="phone_number" placeholder="เบอร์โทรศัพท์" >
                              </div>
                      </div>
 
                      <div class="form-group d-flex ">        
                              <div class="input-group mb-3 ">
                              <span class="input-group-text" id="basic-addon1"> <img src="/img/lock.png" style="max-width: 22px; height:auto;" alt=""></span>
                              <input type="password" class="form-control" name="password" placeholder="รหัสผ่าน" >
                              </div>
                      </div>

                      <div class="form-group d-flex ">        
                              <div class="input-group mb-3 ">
                              <span class="input-group-text" id="basic-addon1"> <img src="/img/lock.png" style="max-width: 22px; height:auto;" alt=""></span>
                              <input type="password" class="form-control" name="password2" placeholder="ยืนยันรหัสผ่าน" >
                              </div>
                      </div> 

                      <div class="form-group d-flex ">        
                              <div class="input-group mb-3 ">
                              <span class="input-group-text" id="basic-addon1"> <img src="/img/user.png" style="max-width: 22px;height:auto;" alt=""></span>
                              <input type="text" class="form-control" placeholder="ชื่อจริง" name="first_name" >
                              </div>
                      </div>

                      <div class="form-group d-flex ">        
                        <div class="input-group mb-3 ">
                        <span class="input-group-text" id="basic-addon1"> <img src="/img/user.png" style="max-width: 22px;height:auto;" alt=""></span>
                        <input type="text" class="form-control" placeholder="นามสกุล" name="last_name" >
                        </div>
                      </div>

                      <div class="form-group d-flex ">        
                        <div class="input-group mb-3 ">
                        <span class="input-group-text" id="basic-addon1"> <img src="/img/home.png" style="max-width: 35px;height:auto;" alt=""></span>
                        <input type="text" class="form-control" placeholder="ที่อยู่" name="address" >
                        </div>
                      </div>

                      <div class="form-group d-flex">
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><img src="/img/image.png" style="max-width: 22px; height: auto;" alt=""></span>
                          <input type="file" class="form-control" placeholder="เพิ่มรูปภาพ" name="img_user">
                        </div>
                      </div>
                      
                      <div class="mt-5">
                        <button class="w-100 p-2 d-block custom-btn" >สมัครสมาชิก</button>
                      </div> 
                      
                    </form>
                    <div class=" text-center mt-3"><a href="customer_login" style="text-decoration:none ;color:#090909 ">ล็อกอิน</a></div >
                    <br>
                   
                  </div>
              </div>
            </div>
          </div>
